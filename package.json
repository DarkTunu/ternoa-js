{
  "name": "ternoa-js",
  "version": "1.5.0-alpha0",
  "description": "Ternoa library of functions to interact with the blockchain and manipulate transactions",
  "engines": {
    "node": ">=14.13.1 || >=16.0.0"
  },
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "build": "rimraf build && tsc && npm run build:frank-build",
    "build:frank-build": "node ./src/_misc/scripts/frank-build.mjs",
    "docs": "typedoc ./src/index.ts",
    "lint": "eslint ./src --ext .js,.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --config jestconfig.json --detectOpenHandles --forceExit --silent=false --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capsule-corp-ternoa/ternoa-js.git"
  },
  "keywords": [
    "ternoa",
    "blockchain",
    "transaction",
    "sdk",
    "substrate"
  ],
  "author": "Ghali Leouarz",
  "contributors": [
    {
      "name": "Igor Papandinas"
    },
    {
      "name": "Victor Salomon"
    },
    {
      "name": "Marko Petrlic"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/capsule-corp-ternoa/ternoa-js/issues"
  },
  "homepage": "https://github.com/capsule-corp-ternoa/ternoa-js#readme",
  "devDependencies": {
    "@babel/preset-env": "7.20.x",
    "@babel/preset-typescript": "7.18.x",
    "@jest/test-sequencer": "29.4.x",
    "@types/jest": "29.4.x",
    "@types/mime-types": "2.1.x",
    "@typescript-eslint/eslint-plugin": "5.50.x",
    "@typescript-eslint/parser": "5.50.x",
    "babel-jest": "29.4.x",
    "dotenv": "16.0.x",
    "eslint": "8.33.x",
    "eslint-config-prettier": "8.6.x",
    "eslint-plugin-jest": "27.2.x",
    "jest": "29.4.x",
    "nodemon": "2.0.x",
    "prettier": "2.8.x",
    "ts-jest": "29.0.x",
    "ts-node": "10.9.x",
    "typedoc": "0.23.x",
    "typescript": "4.9.x"
  },
  "dependencies": {
    "@polkadot/api": "9.13.5",
    "axios": "0.27.x",
    "bn.js": "5.2.x",
    "form-data-encoder": "1.7.x",
    "formdata-node": "4.4.x",
    "stream": "0.0.x",
    "openpgp": "5.5.0",
    "shamirs-secret-sharing": "^1.0.1"
  }
}
